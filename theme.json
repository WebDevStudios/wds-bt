	"styles": {
		"blocks": {
			"core/button": {
				"variations": {
					"outline": {
						"border": {
							"color": "var(--wp--preset--color--primary-500)",
							"style": "solid",
							"width": "0.063rem"
						},
						"spacing": {
							"padding": {
								"top": "0.438rem",
								"right": "0.938rem",
								"bottom": "0.438rem",
								"left": "0.938rem"
							}
						},
						"color": {
							"text": "var(--wp--preset--color--primary-500)"
						}
					}
				}
			},
			"core/buttons": {
				"spacing": {
					"blockGap": "0.625rem"
				}
			},
			"core/code": {
				"color": {
					"background": "var(--wp--preset--color--white)",
					"text": "var(--wp--preset--color--black)"
				},
				"spacing": {
					"padding": {
						"top": "var(--wp--custom--spacing--gap)",
						"right": "var(--wp--preset--spacing--x-large)",
						"bottom": "var(--wp--custom--spacing--gap)",
						"left": "var(--wp--preset--spacing--x-large)"
					}
				},
				"typography": {
					"fontSize": "var(--wp--preset--font-size--x-small)",
					"fontFamily": "var(--wp--preset--font-family--roboto-mono)"
				}
			},
			"core/comment-author-name": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--x-small)",
					"lineHeight": "var(--wp--custom--line-height--medium)"
				}
