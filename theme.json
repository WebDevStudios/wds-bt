{
    "title": "Light Mode",
    "version": 3,
    "$schema": "https://schemas.wp.org/wp/6.7/theme.json",
    "description": "Light mode palette for the theme",
    "settings": {
        "appearanceTools": true,
        "color": {
            "custom": true,
            "defaultDuotone": false,
            "defaultGradients": false,
            "defaultPalette": false,
            "palette": [
                {
                    "color": "#FFFFFF",
                    "name": "Base",
                    "slug": "base"
                },
                {
                    "color": "#3F4040",
                    "name": "Contrast",
                    "slug": "contrast"
                },
                {
                    "color": "#F47C48",
                    "name": "Accent 1",
                    "slug": "accent-1"
                },
                {
                    "color": "#E2E4EB",
                    "name": "Accent 2",
                    "slug": "accent-2"
                },
                {
                    "color": "color-mix(in srgb, currentColor 20%, transparent)",
                    "name": "Accent 3",
                    "slug": "accent-3"
                }
            ]
        },
        "custom": {
            "header-background": {
                "background": "var:preset|color|base"
            },
            "header-text": {
                "color": "var:preset|color|contrast"
            },
            "header-svg": {
                "color": "var:preset|color|accent-1"
            },
            "navigation-background": {
                "background": "var:preset|color|accent-1"
            },
            "navigation-link": {
                "color": "var:preset|color|contrast"
            },
            "navigation-link-hover": {
                "color": "var:preset|color|accent-1"
            },
            "navigation-sublink-background": {
                "background": "var:preset|color|accent-2"
            },
            "navigation-sublink-hover": {
                "color": "var:preset|color|contrast"
            }
        },
        "layout": {
            "contentSize": "1160px",
            "wideSize": "1200px"
        },
        "spacing": {
            "defaultSpacingSizes": false,
            "spacingScale": {
                "steps": 1
            },
            "spacingSizes": [
                {
                    "name": "Tiny",
                    "size": "1rem",
                    "slug": "10"
                },
                {
                    "name": "X-Small",
                    "size": "1.25rem",
                    "slug": "20"
                },
                {
                    "name": "Small",
                    "size": "min(1.875rem, 5vw)",
                    "slug": "30"
                },
                {
                    "name": "Regular",
                    "size": "min(2rem, 6vw)",
                    "slug": "40"
                },
                {
                    "name": "Large",
                    "size": "min(3.125rem, 6vw)",
                    "slug": "50"
                },
                {
                    "name": "X-Large",
                    "size": "min(3.75rem, 7vw)",
                    "slug": "60"
                },
                {
                    "name": "XX-Large",
                    "size": "min(4.375rem, 8vw)",
                    "slug": "70"
                }
            ],
            "units": [
                "%",
                "px",
                "em",
                "rem",
                "vh",
                "vw"
            ]
        },
        "typography": {
            "writingMode": true,
            "defaultFontSizes": false,
            "fluid": {
                "maxViewportWidth": "1200px",
                "minFontSize": "0.813rem",
                "minViewportWidth": "600px"
            },
            "fontFamilies": [
                {
                    "name": "Oxygen",
                    "slug": "body",
                    "fontFamily": "Oxygen, sans-serif",
                    "fontFace": [
                        {
                            "fontFamily": "Oxygen",
                            "fontStyle": "normal",
                            "fontWeight": "300",
                            "src": [
                                "file:./build/fonts/body/oxygen-v15-latin-300.woff2"
                            ]
                        },
                        {
                            "fontFamily": "Oxygen",
                            "fontStyle": "normal",
                            "fontWeight": "700",
                            "src": [
                                "file:./build/fonts/body/oxygen-v15-latin-700.woff2"
                            ]
                        },
                        {
                            "fontFamily": "Oxygen",
                            "fontStyle": "normal",
                            "fontWeight": "400",
                            "src": [
                                "file:./build/fonts/body/oxygen-v15-latin-regular.woff2"
                            ]
                        }
                    ]
                },
                {
                    "name": "Inter",
                    "slug": "headline",
                    "fontFamily": "Inter, sans-serif",
                    "fontFace": [
                        {
                            "fontFamily": "Inter",
                            "fontStyle": "normal",
                            "fontWeight": "400",
                            "src": [
                                "file:./build/fonts/headline/Inter.woff2"
                            ]
                        }
                    ]
                },
                {
                    "name": "Roboto Mono",
                    "slug": "mono",
                    "fontFamily": "Roboto Mono, sans-serif",
                    "fontFace": [
                        {
                            "fontFamily": "Roboto Mono",
                            "fontStyle": "normal",
                            "fontWeight": "400",
                            "src": [
                                "file:./build/fonts/mono/roboto-mono.woff2"
                            ]
                        }
                    ]
                }
            ],
            "fontSizes": [
                {
                    "fluid": false,
                    "name": "Small",
                    "size": "0.875rem",
                    "slug": "small"
                },
                {
                    "fluid": {
                        "max": "1.25rem",
                        "min": "1rem"
                    },
                    "name": "Medium",
                    "size": "1rem",
                    "slug": "medium"
                },
                {
                    "fluid": {
                        "max": "1.75rem",
                        "min": "1.5rem"
                    },
                    "name": "Large",
                    "size": "1.5rem",
                    "slug": "large"
                },
                {
                    "fluid": {
                        "max": "2.25rem",
                        "min": "1.5rem"
                    },
                    "name": "Extra Large",
                    "size": "1.5rem",
                    "slug": "x-large"
                },
                {
                    "fluid": {
                        "max": "3rem",
                        "min": "2.15rem"
                    },
                    "name": "Extra Extra Large",
                    "size": "2.15rem",
                    "slug": "xx-large"
                }
            ]
        },
        "useRootPaddingAwareAlignments": true
    },
    "styles": {
        "blocks": {
            "core/button": {
                "variations": {
                    "outline": {
                        "border": {
                            "color": "currentColor",
                            "style": "solid",
                            "width": "1px"
                        },
                        "spacing": {
                            "padding": {
                                "bottom": "calc(1rem - 1px)",
                                "left": "calc(2.25rem - 1px)",
                                "right": "calc(2.25rem - 1px)",
                                "top": "calc(1rem - 1px)"
                            }
                        }
                    }
                }
            },
            "core/buttons": {
                "spacing": {
                    "blockGap": "var:preset|spacing|30"
                }
            },
            "core/comments-title": {
                "typography": {
                    "fontSize": "var:preset|font-size|x-large"
                }
            },
            "core/cover": {
                "spacing": {
                    "margin": {
                        "bottom": "0",
                        "top": "0"
                    },
                    "padding": "var:preset|spacing|30"
                }
            },
            "core/group": {
                "spacing": {
                    "margin": {
                        "bottom": "0",
                        "top": "0"
                    }
                }
            },
            "core/link": {
                "typography": {
                    "textDecoration": "underline"
                },
                "hover": {
                    "typography": {
                        "textDecoration": "none"
                    },
                    "color": {
                        "text": "var:preset|color|accent-3"
                    }
                }
            },
            "core/list": {
                "spacing": {
                    "padding": {
                        "bottom": "var:preset|spacing|20",
                        "left": "0",
                        "right": "var:preset|spacing|30",
                        "top": "var:preset|spacing|20"
                    }
                }
            },
            "core/navigation": {
                "spacing": {
                    "blockGap": "var:preset|spacing|20"
                },
                "typography": {
                    "fontSize": "var:preset|font-size|small"
                }
            },
            "core/paragraph": {
                "spacing": {
                    "margin": {
                        "top": "var:preset|spacing|30"
                    }
                },
                "typography": {
                    "fontSize": "var:preset|font-size|small",
                    "letterSpacing": "0.002em",
                    "lineHeight": "clamp(130%, 0.7600rem + 0.9178vw, 150%)"
                }
            },
            "core/post-navigation-link": {
                "elements": {
                    "link": {
                        "typography": {
                            "fontWeight": "700"
                        }
                    }
                }
            },
            "core/post-template": {
                "spacing": {
                    "blockGap": "var:preset|spacing|40"
                }
            },
            "core/post-terms": {
                "elements": {
                    "link": {
                        "spacing": {
                            "padding": {
                                "bottom": "0",
                                "left": "var:preset|spacing|20",
                                "right": "var:preset|spacing|20",
                                "top": "0"
                            }
                        }
                    }
                }
            },
            "core/separator": {
                "border": {
                    "color": "currentColor",
                    "radius": "0",
                    "style": "solid",
                    "width": "1px 0 0"
                }
            }
        },
        "color": {
            "background": "var:preset|color|base",
            "text": "var:preset|color|contrast"
        },
        "spacing": {
            "blockGap": "var:preset|spacing|30",
            "padding": {
                "left": "var:preset|spacing|30",
                "right": "var:preset|spacing|30",
                "top": "0",
                "bottom": "0"
            }
        },
        "typography": {
            "fontFamily": "var:preset|font-family|body",
            "fontSize": "var:preset|font-size|medium",
            "fontWeight": "400"
        }
    },
    "templateParts": [
        {
            "area": "header",
            "name": "header",
            "title": "Header"
        },
        {
            "area": "footer",
            "name": "footer",
            "title": "Footer"
        }
    ],
    "customTemplates": [
        {
            "name": "page-blank",
            "postTypes": [
                "page"
            ],
            "title": "Page: Blank"
        },
        {
            "name": "page-no-title",
            "postTypes": [
                "page"
            ],
            "title": "Page: No Title"
        }
    ]
}