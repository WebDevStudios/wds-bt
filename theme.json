					"lineHeight": "var(--wp--custom--line-height--medium)"
				}
			},
			"core/cover": {
				"spacing": {
					"padding": {
						"top": "var(--wp--custom--spacing--gap)",
						"right": "var(--wp--custom--spacing--gap)",
						"bottom": "var(--wp--custom--spacing--gap)",
						"left": "var(--wp--custom--spacing--gap)"
					}
				}
			},
			"core/list": {
				"spacing": {
					"padding": {
						"top": "var(--wp--preset--spacing--x-small)",
						"right": "var(--wp--custom--spacing--gap)",
						"bottom": "var(--wp--preset--spacing--x-small)",
						"left": "0"
					}
				}
			},
			"core/navigation": {
				"spacing": {
					"blockGap": "var(--wp--preset--spacing--x-small)"
				},
				"typography": {
					"fontSize": "var(--wp--preset--font-size--x-small)"
				}
			},
			"core/paragraph": {
				"spacing": {
					"margin": {
						"top": "var(--wp--custom--spacing--gap)"
					}
				},
				"typography": {
					"fontSize": "var(--wp--preset--font-size--x-small)",
					"lineHeight": "var(--wp--custom--line-height--medium)",
					"letterSpacing": "0.002em"
				}
			},
			"core/post-comments-form": {
				"css": " & input, textarea {border-color: var(--wp--preset--color--primary-500); padding: 0.625rem 1.25rem;} & input[type=submit] {width: auto;} & label {font-size: var(--wp--preset--font-size--x-small);}"
			},
			"core/post-excerpt": {
				"css": "& .wp-block-post-excerpt__more-text {margin-top: var(--wp--preset--spacing--x-small);}"
			},
			"core/post-template": {
				"spacing": {
					"blockGap": "var(--wp--preset--spacing--medium);"
				}
			},
			"core/post-title": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--x-large)"
				}
			},
			"core/preformatted": {
				"color": {
					"background": "var(--wp--preset--color--primary-500)",
					"text": "var(--wp--preset--color--white)"
				},
				"css": "{overflow-wrap: normal; overflow-x: scroll; tab-size: 4; white-space: pre !important;}",
				"spacing": {
					"padding": {
						"top": "var(--wp--custom--spacing--gap)",
						"right": "var(--wp--custom--spacing--gap)",
						"bottom": "var(--wp--custom--spacing--gap)",
						"left": "var(--wp--custom--spacing--gap)"
					}
				},
				"typography": {
					"fontSize": "var(--wp--preset--font-size--small)"
				}
			},
			"core/pullquote": {
				"border": {
					"color": "var(--wp--preset--color--grey-200)",
					"style": "solid",
					"width": "0.125rem 0 0.125rem 0"
				},
				"typography": {
					"fontFamily": "var(--wp--preset--font-family--inter)",
					"fontSize": "var(--wp--preset--font-size--medium)"
				},
				"elements": {
					"cite": {
						"typography": {
							"fontFamily": "var(--wp--preset--font-family--oxygen)",
							"fontStyle": "inherit",
							"fontSize": "var(--wp--preset--font-size--x-small)"
						}
					}
				},
				"spacing": {
					"padding": {
						"top": "1.5rem",
						"right": "1.5rem",
						"bottom": "1.5rem",
						"left": "1.5rem"
					},
					"margin": {
						"top": "var(--wp--custom--spacing--gap)",
						"bottom": "var(--wp--custom--spacing--gap)"
					}
				}
			},
			"core/query-title": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--large)",
					"fontStyle": "inherit"
				}
			},
			"core/quote": {
				"border": {
					"color": "var(--wp--preset--color--grey-200)",
					"style": "solid",
					"width": "0 0 0 0.125rem"
				},
				"typography": {
					"fontFamily": "var(--wp--preset--font-family--oxygen)"
				},
				"elements": {
					"cite": {
						"typography": {
							"fontFamily": "var(--wp--preset--font-family--oxygen)",
							"fontStyle": "inherit",
							"fontSize": "0.75rem"
						}
					}
				},
				"spacing": {
					"padding": {
						"top": "0",
						"right": "1.5rem",
						"bottom": "0",
						"left": "1.5rem"
					},
					"margin": {
						"top": "var(--wp--custom--spacing--gap)",
						"bottom": "var(--wp--custom--spacing--gap)"
					}
				},
				"variations": {
					"plain": {
						"border": {
							"style": "none"
						},
						"typography": {
							"fontStyle": "italic"
						},
						"spacing": {
							"padding": {
								"top": "0",
								"right": "0",
								"bottom": "0",
								"left": "0"
							}
						}
					}
				}
			},
			"core/separator": {
				"border": {
					"color": "currentColor",
					"radius": "0",
					"style": "solid",
					"width": "0.063rem 0 0"
				},
				"css": ":not(.is-style-wide):not(.is-style-dots) {width: 5rem;}"
			},
			"core/site-title": {
				"elements": {
					"link": {
						"typography": {
							"textDecoration": "none"
						}
					}
				},
				"typography": {
					"fontSize": "var(--wp--preset--font-size--large)",
					"fontWeight": "var(--wp--custom--font-weight--regular)",
					"lineHeight": "var(--wp--custom--line-height--heading)"
				}
			},
			"core/social-links": {
				"css": ".is-style-outline .wp-block-social-link {background-color: transparent;border: 0.063rem solid currentColor;}",
				"spacing": {
					"blockGap": "0.625rem"
				}
			},
			"core/spacer": {
				"spacing": {
					"margin": {
						"top": "0"
					}
				}
			},
			"core/table": {
				"css": "th {border-color: var(--wp--preset--color--primary-500) !important;} & td {border-color: var(--wp--preset--color--primary-500) !important;}",
				"typography": {
					"fontSize": "var(--wp--preset--font-size--small)"
				}
			},
			"core/template-part": {
				"spacing": {
					"margin": {
						"top": "0"
					}
				}
			}
		},
