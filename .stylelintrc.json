{
	"extends": ["@wordpress/stylelint-config/scss"],
	"rules": {
		"declaration-no-important": true,
		"no-descending-specificity": false,
		"selector-class-pattern": false,
		"scss/at-rule-no-unknown": [
			true,
			{
				"ignoreAtRules": [
					"apply",
					"layer",
					"variants",
					"responsive",
					"screen"
				]
			}
		],
		"declaration-property-unit-allowed-list": [
			{
				"font-size": ["em", "rem"],
				"line-height": [],
				"/^border/": ["px"],
				"/^margin/": ["em", "rem"],
				"/^padding/": ["em", "rem"]
			}
		]
	}
}
