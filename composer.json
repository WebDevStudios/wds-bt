{
	"name": "webdevstudios/wds-bt",
	"description": "A FSE/Gutenberg block starter theme from WebDevStudios.",
	"type": "wordpress-theme",
	"license": "GPL-2.0-or-later",
	"authors": [
		{
			"name": "WebDevStudios",
			"email": "contact@webdevstudios.com"
		}
	],
	"config": {
		"platform": {
			"php": "8.3"
		},
		"allow-plugins": {
			"composer/installers": true,
			"dealerdirect/phpcodesniffer-composer-installer": true,
			"squizlabs/php_codesniffer": true,
			"wp-coding-standards/wpcs": true
		},
		"sort-packages": true
	},
	"require": {
		"composer/installers": "^2.3.0"
	},
	"require-dev": {
		"php": ">=8.3",
		"dealerdirect/phpcodesniffer-composer-installer": "^1.0.1",
		"phpcompatibility/phpcompatibility-wp": "^2.1.6",
		"squizlabs/php_codesniffer": "^3.13.0",
		"wp-cli/wp-cli-bundle": "^2.12.0",
		"wp-coding-standards/wpcs": "^3.2.0"
	},
	"scripts": {
		"phpcs": [
			"bash -c \"$(./scripts/get-php.sh) $(./scripts/get-php-flags.sh) vendor/bin/phpcs --report=full,source\""
		],
		"phpcs-fix": [
			"bash -c \"$(./scripts/get-php.sh) $(./scripts/get-php-flags.sh) vendor/bin/phpcbf --report=summary,source\""
		],
		"post-install-cmd": [
			"./scripts/update-cursorrules.sh"
		]
	}
}
